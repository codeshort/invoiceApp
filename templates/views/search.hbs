<!Doctype Html>
<Html>
  <Head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css"
       integrity="sha256-46r060N2LrChLLb5zowXQ72/iKKNiw/lAmygmHExk/o=" crossorigin="anonymous" />
    <Title>
    </Title>
    <link rel="stylesheet" href="/css/style.css">
</Head>
  <Body>
<div class="wrapper">
    <div class="form1">
      <form method="POST" action="/search">
      <div class="search-container">
        <input type="text" placeholder=" Search by Email ID..." name="email" autocomplete="off" class="search-bar" value="{{searched_mail}}">
      </div>
      <button type="submit" class="submit-btn">Submit</button>
      </form>
    </div>

<div class="invoice-list">
    {{#if invoice}}
        <table class="">
          <thead>
            <tr>
              <th>Title</th>
              <th>Date</th>
              <th>Status</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {{#each invoice}}

            <tr>
              <td>{{invoiceId}}</td>
              <td><span class="">{{dueDate}}</span></td>
              <td>{{status}}</td>

              <td>

                <div class="buttons">
                  <form action="" method="POST" id="edit-form">
                    <button type="submit" class="edit-btn">
                      <i class="fas fa-edit"></i>
                    </button>
                  </form>
                  <form action="/delete/{{_id}}" method="POST" id="delete-form">
                    <button type="submit" class="delete-btn">
                      <i class="fas fa-trash"></i>
                    </button>
                  </form>

                </div>

              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
    {{else}}
    <p>You  don't have any stories right now.</p>
    {{/if}}

</div>
</div>
  </Body>
</Html>
